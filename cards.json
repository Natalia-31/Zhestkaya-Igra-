import json
from pathlib import Path

def load_cards():
    cards_path = Path(__file__).parent / "cards.json"
    with cards_path.open(encoding="utf-8") as f:
        data = json.load(f)
    return data["cards"]  # Извлекаем массив из поля "cards"

# В коде игры
all_cards = load_cards()
session.deal_hands(all_cards)
